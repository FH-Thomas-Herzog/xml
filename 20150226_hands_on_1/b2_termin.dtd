<?xml version="1.0" encoding="UTF-8"?>
<!ENTITY % DATE_TIME "(DATE, TIME?)">
<!ENTITY % PARTICIPANT SYSTEM "b3_teilnehmerListe.ent">
<!ELEMENT APPOINTMENT (STARTDATE?, ENDDATE?, DURATION, APPOINTMENT_DESCRIPTION, APPOINTMENT_NOTIFICATIONS, PARTICIPANT_LIST)>
<!ELEMENT STARTDATE %DATE_TIME;>
<!ELEMENT ENDDATE %DATE_TIME;>
<!ELEMENT DATE (DAY, MONTH, YEAR)>
<!ELEMENT TIME (HOUR, MINUTE)>
<!ELEMENT DAY (#PCDATA)>
<!ELEMENT MONTH (#PCDATA)>
<!ELEMENT YEAR (#PCDATA)>
<!ELEMENT HOUR (#PCDATA)>
<!ELEMENT MINUTE (#PCDATA)>
<!ELEMENT DURATION (#PCDATA)>
<!ELEMENT APPOINTMENT_DESCRIPTION (DESCRIPTION_TITLE, DESCRIPTION, APPOINTMENT_TYPE, APPOINTMENT_LOCATION?, APPOINTMENT_LINK?)>
<!ELEMENT DESCRIPTION_TITLE (#PCDATA)>
<!ELEMENT DESCRIPTION (#PCDATA)>
<!ELEMENT APPOINTMENT_TYPE (#PCDATA)>
<!ELEMENT APPOINTMENT_LOCATION (#PCDATA)>
<!ELEMENT APPOINTMENT_LINK (#PCDATA)>
<!ELEMENT APPOINTMENT_NOTIFICATIONS (NOTIFICATION*)>
<!ELEMENT NOTIFICATION (#PCDATA)>
<!ELEMENT PARTICIPANT_LIST (PARTICIPANT*)>
%PARTICIPANT;
<!ATTLIST APPOINTMENT
	id ID #REQUIRED
	name CDATA #REQUIRED
	creator CDATA #REQUIRED
	movable (true | false) #REQUIRED
	serialized (true | false) #REQUIRED
>
<!ATTLIST DURATION
	type (hour) "hour"
>
<!ATTLIST NOTIFICATION
	type (Beep | EMail | Fax) #REQUIRED
	period (day | minute) #REQUIRED
>
